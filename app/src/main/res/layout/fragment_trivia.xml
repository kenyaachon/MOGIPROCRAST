<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.iruss.mogivisions.experiment.TriviaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/trialsRemaining"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trials Remaing: 1" />

        <TextView
            android:id="@+id/questionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <Button
            android:id="@+id/questionResponse1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="True"
            android:visibility="visible"
            />

        <Button
            android:id="@+id/questionResponse2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FALSE"
            android:visibility="visible"
            />

        <Button
            android:id="@+id/questionResponse3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button"
            android:visibility="visible"
            />

        <Button
            android:id="@+id/questionResponse4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button"
            android:visibility="visible"
            />

    </LinearLayout>

</FrameLayout>